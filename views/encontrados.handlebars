<body>
  <link rel="stylesheet" href="/static/perdidos.css">

  <form class="busca" action="/encontrados/filtrar" method="get">
    <div class="areaBusca">

      <div class="btn-group btn-group-toggle" data-toggle="buttons" id = "groupButton">
        <label class="btn btn-secondary  tamanhoButton active">
          <input name="optionsCachorro" type="radio" id="cachorro" autocomplete="off" {{#if cachorroSelecionado}}checked{{/if}}> Cachorro
        </label>
        <label class="btn btn-secondary tamanhoButton">
          <input type="radio" name="optionsGato" id="gato" autocomplete="off" {{#if cachorroSelecionado}}{{else}}checked{{/if}}> Gato
        </label>
      </div>
      
      <div class="formFlex">

        <select name = "selectCor" class="form-control" id="selectCor">
          <option disabled selected hidden>Cor do Pelo</option>
          {{#each cor}}
            <option>{{this}}</option>
          {{/each}}
        </select>

        <select name = "selectPorte" class="form-control"  id="selectPorte">
          <option disabled selected hidden>Porte</option>
          {{#each porte}}
            <option>{{this}}</option>
          {{/each}}
        </select>
      </div>

      <div>
        <button type="submit" class="btn btn-success" href="#" id="filtrar">Filtrar</button>
      </div>
    </div>
  </form>


  <main>
    <div class="resultado">
      {{#each animais}}
        <div class="item">
          <div class="conteudo">
            <div class="imagem">
              <img src="/updates/{{this.foto}}" alt="">
            </div>
            <div class="info">
              <div class="tags">
                <div class="cor"><span>{{this.cor}}</span></div>
                <div class="porte"><span>{{this.porte}}</span></div>
              </div>
              <div class="desc"><span>{{this.desc}}</span></div>
              <div class="mais">
                <div id="local" class="local"><span>{{this.local}}</span></div>
                <div class="data"><span>{{this.data}}</span></div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div id="map"></div>
    <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: -23.644, lng: -46.528},
          zoom: 10
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAfyzephIQTy7vK5BTgV-RvwEZsViGAQck&callback=initMap"
    async defer></script>
  </main>
    
  <script type="text/javascript" src = "/static/googleMaps.js"></script>
  <script type="text/javascript" src = "/static/encontrados.js"></script>
</body>